generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String?  @unique
  createdAt DateTime @default(now())

  meals     MealLog[]
}

model MealLog {
  id           String    @id @default(cuid())
  userId       String
  user         User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  loggedAt     DateTime
  mealType     String
  source       String?   // asken / manual / import
  note         String?

  totalCal     Float?    // 任意：取り込み後に集計して埋める
  totalProtein Float?
  totalFat     Float?
  totalCarb    Float?

  items        MealItem[]

  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@index([userId, loggedAt])
}

model MealItem {
  id        String   @id @default(cuid())
  mealId    String
  meal      MealLog  @relation(fields: [mealId], references: [id], onDelete: Cascade)

  name      String
  amount    Float?
  unit      String?
  cal       Float?
  protein   Float?
  fat       Float?
  carb      Float?

  createdAt DateTime @default(now())

  @@index([mealId])
}

/// あすけん・Strong の日次データを統合して保存するテーブル
model DailyData {
  id        String   @id @default(cuid())
  date      String   @unique  // YYYY-MM-DD
  
  /// あすけんの食事アイテム (JSON配列)
  askenItems     Json?  // [{ mealType, name, amount, calories }]
  /// あすけんの栄養素データ (JSON: { 朝食: { エネルギー: "500kcal", ... }, ... })
  askenNutrients Json?  // Record<string, Record<string, string>>
  
  /// Strong 筋トレデータ (JSON)
  strongData     Json?  // { workouts: [...], totals: { ... } }
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([date])
}

/// 同期ログ（最終同期時刻・結果を保持、常にid=1の1レコード）
model SyncLog {
  id          Int      @id @default(1)
  timestamp   DateTime @default(now())
  askenCount  Int      @default(0) @map("asken_count")
  strongCount Int      @default(0) @map("strong_count")
  dayCount    Int      @default(0) @map("day_count")
  errors      String?  // JSON文字列
}
